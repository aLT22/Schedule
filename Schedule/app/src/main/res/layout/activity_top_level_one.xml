<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="8"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:rowCount="6"
    tools:context=".TopLevelOne">

    <ListView
        android:id="@+id/affairListView"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/affairTextView" />

    <TextView
        android:id="@+id/affairTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/today_affairs" />

    <TextView
        android:id="@+id/categoryTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onCategoriesClick"
        android:text="@string/categories"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_alignTop="@+id/affairListView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/affairsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:onClick="onAffairsClick"
        android:text="@string/affairs"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/categoryTextView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/referenceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onRefClick"
        android:text="@string/reference"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/affairsTextView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>