<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.alexey.schedule.MiddleLevelTwo">

    <ListView
        android:id="@+id/slAffairsInConcreteCategoryListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/slAddAffairInConcreteCategoryTextView"
        android:layout_toStartOf="@+id/slAddAffairInConcreteCategoryTextView" />

    <TextView
        android:id="@+id/slAddAffairInConcreteCategoryTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/slAffairsInConcreteCategoryListView"
        android:onClick="onAddAffairClick"
        android:paddingLeft="@dimen/indent"
        android:text="@string/add_affair"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/colorPrimaryDark" />
</RelativeLayout>
