<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.alexey.schedule">

    <application
        android:allowBackup="true"
        android:icon="@drawable/starticon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".TopLevelOne">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MiddleLevelOne"
            android:label="@string/categories" />
        <activity
            android:name=".References"
            android:label="@string/reference" />
        <activity
            android:name=".MiddleLevelTwo"
            android:label="@string/category_affairs" />
        <activity
            android:name=".MiddleLevelThree"
            android:label="@string/affairs" />
        <activity
            android:name=".BottomLevelOne"
            android:label="@string/affair_info" />
        <activity
            android:name=".BottomLevelTwo"
            android:label="@string/add_affair" />
        <activity
            android:name=".BottomLevelThree"
            android:label="@string/add_category" />
    </application>

</manifest>
